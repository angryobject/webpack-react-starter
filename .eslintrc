{
   "extends": "eslint:recommended",

   "parser": "babel-eslint",

   "env": {
      "browser": true,
      "node": true,
      "es6": true
   },

   "plugins": [
      "react"
   ],

   "ecmaFeatures": {
      "jsx": true
   },

   "rules": {
      "quotes": [1, "single"],
      "jsx-quotes": [1, "prefer-double"],
      "indent": [1, 3, {"SwitchCase": 1}],
      "react/jsx-indent-props": [1, 3],
      "no-mixed-spaces-and-tabs": [1, "smart-tabs"],
      "no-trailing-spaces": 1,
      "eol-last": 1,
      "linebreak-style": 1
   },
   "globals": {
      "React": true,
      "ReactDOM": true
   }
}
